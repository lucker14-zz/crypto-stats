html 
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-text-size-adjust 100%


body, html
    position relative
    min-height 100vh
    min-width 100%
    background #290058
    min-width 320px
    color #eee
    text-align left
    margin 0
    padding 0
    max-width 100vw
    overflow-x hidden


*
    font-family Roboto,'calibre', Helvetica, Arial, 'sans-serif'
    box-sizing border-box

    &:focus, &:active
        outline none !important
        
    &, &:before, &:after
        box-sizing border-box
        outline 0
        -webkit-font-smoothing antialiased


img, svg
    border 0
    outline none
    max-width 100%


ul,li
    margin 0
    padding 0
    list-style-type none


h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label
    margin 0
    padding 0
    text-decoration none
    -webkit-font-smoothing antialiased


ul, li
    padding 0
    margin 0
    list-style-type none
    
.container
    display flex
    
    &__outer
        flex-flow column wrap
        justify-content center
        align-items center
        min-width 100vw
        min-height 100vh
        padding 20px 0
        
    &__inner
        flex-flow column wrap
        justify-content center
        align-items center
        width 100%
        max-width 90vw
        height 100%
        min-height 70vh
        
    &__assets
        flex-flow column wrap
        justify-content center
        align-items center
        width 100%
        max-width 500px
        min-height 70vh
        height 100%
    
    &__asset, &__caption
        flex-flow row wrap
        justify-content flex-start
        align-items center
        width 100%
        
        div
            border 1px solid #eee 
            width 33%
            height 25px
            
    &__caption
        font-weight 700
